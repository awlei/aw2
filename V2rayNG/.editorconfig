# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Code files
[*.{kt,kts,java}]
indent_style = space
indent_size = 4
continuation_indent_size = 4
max_line_length = 150

# XML files
[*.{xml,xml.ftl}]
indent_style = space
indent_size = 2
continuation_indent_size = 2
max_line_length = 150

# Gradle files
[*.gradle]
indent_style = space
indent_size = 4
continuation_indent_size = 4

# Properties files
[*.properties]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off
