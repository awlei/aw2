<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardServer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:id="@+id/itemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <!-- 选中指示器 -->
        <View
            android:id="@+id/selectedIndicator"
            android:layout_width="4dp"
            android:layout_height="24dp"
            android:background="@color/color_fab_active"
            android:visibility="gone" />

        <!-- 服务器信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <!-- 服务器名称 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="服务器名称"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="香港节点 01" />

                <!-- 类型标签 -->
                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VLESS"
                    android:textSize="11sp"
                    android:textColor="#999999"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/bg_tag"
                    tools:text="VLESS" />
            </LinearLayout>

            <!-- 延迟显示 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvTestResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未测试"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    tools:text="156ms" />

                <!-- 订阅标签（如果有） -->
                <TextView
                    android:id="@+id/tvSubscription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订阅"
                    android:textSize="10sp"
                    android:textColor="#666666"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_subscription_tag"
                    android:visibility="gone"
                    tools:text="订阅" />
            </LinearLayout>
        </LinearLayout>

        <!-- 速度图标（可选） -->
        <ImageView
            android:id="@+id/ivSpeed"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_speed_24dp"
            android:tint="#4CAF50"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
